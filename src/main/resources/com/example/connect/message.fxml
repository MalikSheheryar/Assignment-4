<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefHeight="400.0" prefWidth="600.0">
    <VBox spacing="10" layoutX="20" layoutY="20" prefWidth="560">
        <Label text="Messaging" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <TextArea fx:id="messageArea" editable="false" prefHeight="250" prefWidth="560" />
        <HBox spacing="10">
            <TextField fx:id="messageInput" promptText="Type your message here..." prefWidth="480" />
            <Button fx:id="sendMessageButton" text="Send" />
        </HBox>
        <Button fx:id="backButton" text="Back" />
    </VBox>
</AnchorPane>
